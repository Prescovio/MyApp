<resources>
    <!--Main theme with custom AppBar-->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Controls-->
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <!--Activity styles-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
    </style>

    <!--Login theme with default AppBar-->
    <style name="LoginScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Controls-->
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ToolbarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Control styles-->
    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorHint">@color/colorHintFont</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/editTextFont</item>
        <item name="android:textColorHint">@color/editTextHintFont</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/color_button_font</item>
        <!--<item name="android:font">@font/font_button</item> api lvl not high enough-->
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
